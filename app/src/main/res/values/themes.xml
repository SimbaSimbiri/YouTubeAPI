<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YouTubeAPI" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/primaryColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/primaryColor</item>
    </style>


    <style name="titleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">@font/baloo_paaji_2_semibold</item>
    </style>

</resources>